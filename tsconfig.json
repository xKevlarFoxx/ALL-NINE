{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "jsx": "react-native", // Added to support JSX
    "esModuleInterop": true, // Enable default imports for modules
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["./components/*"],
      "@store/*": ["./store/*"],
      "@hooks/*": ["./hooks/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
